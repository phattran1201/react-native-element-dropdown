{
  "author": "Harold Tran <phattran1201@gmail.com> (https://github.com/phattran1201)",
  "bugs": {
    "url": "https://github.com/phattran1201/react-native-element-dropdown/issues"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "description": "React Native Element Dropdown is a library that provides a customizable dropdown component for React Native applications.",
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.2.2",
    "@react-native-community/eslint-config": "^3.0.2",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^28.1.2",
    "@types/lodash": "^4.14.191",
    "@types/react": "~17.0.21",
    "@types/react-native": "0.70.0",
    "@types/react-test-renderer": "^18.0.0",
    "commitlint": "^17.0.2",
    "del-cli": "^5.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "18.2.0",
    "react-native": "0.71.3",
    "react-native-builder-bob": "^0.20.0",
    "react-test-renderer": "^18.2.0",
    "release-it": "^15.0.0",
    "typescript": "^4.5.2"
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "root": true,
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "lib/",
    "node_modules/"
  ],
  "files": [
    "!**/.*",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/__tests__",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!ios/build",
    "!lib/typescript/example",
    "*.podspec",
    "android",
    "cpp",
    "ios",
    "lib",
    "src"
  ],
  "homepage": "https://github.com/phattran1201/react-native-element-dropdown#readme",
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ],
    "preset": "react-native"
  },
  "keywords": [
    "components",
    "dropdown",
    "elements",
    "lazy loading",
    "load more",
    "material",
    "menu",
    "multiselect",
    "picker",
    "react-native",
    "select",
    "select country"
  ],
  "license": "MIT",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "name": "@haroldtran/react-native-element-dropdown",
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "react-native": "src/index",
  "react-native-builder-bob": {
    "output": "lib",
    "source": "src",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "rev${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phattran1201/react-native-element-dropdown.git"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "scripts": {
    "bootstrap": "yarn example && yarn install",
    "example": "yarn --cwd example",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepack": "bob build",
    "release": "release-it",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "source": "src/index",
  "types": "lib/typescript/index.d.ts",
  "version": "0.0.1"
}
